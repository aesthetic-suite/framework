:root {
  <% borderSizes.forEach(size => { -%>
  --border-<%= size -%>-radius: <%= platform.unit(data.border[size].radius) -%>; /* <%= platform.px(data.border[size].radius) %> */
  --border-<%= size -%>-width: <%= platform.unit(data.border[size].width) -%>; /* <%= platform.px(data.border[size].width) %> */
  <% }) -%>

  <% breakpointSizes.forEach(size => { -%>
  --breakpoint-<%= size -%>-query: '<%= platform.query(data.breakpoint[size].queryConditions) -%>';
  --breakpoint-<%= size -%>-query-size: <%= data.breakpoint[size].querySize -%>;
  --breakpoint-<%= size -%>-root-line-height: <%= platform.number(data.breakpoint[size].rootLineHeight) -%>;
  --breakpoint-<%= size -%>-root-text-size: <%= platform.px(data.breakpoint[size].rootTextSize) -%>;
  <% }) -%>

  <% elevationDepths.forEach(([depth, zIndex]) => { -%>
  --depth-<%= depth -%>: <%= zIndex -%>;
  <% }) -%>

  <% headingSizes.forEach(size => { -%>
  --heading-<%= size -%>-letter-spacing: <%= platform.px(data.heading[size].letterSpacing) -%>;
  --heading-<%= size -%>-line-height: <%= platform.number(data.heading[size].lineHeight) -%>;
  --heading-<%= size -%>-size: <%= platform.unit(data.heading[size].size) -%>; /* <%= platform.px(data.heading[size].size) %> */
  <% }) -%>

  <% shadowSizes.forEach(size => { -%>
  --shadow-<%= size -%>-x: <%= platform.unit(data.shadow[size].x) -%>; /* <%= platform.px(data.shadow[size].x) %> */
  --shadow-<%= size -%>-y: <%= platform.unit(data.shadow[size].y) -%>; /* <%= platform.px(data.shadow[size].y) %> */
  --shadow-<%= size -%>-blur: <%= platform.unit(data.shadow[size].blur) -%>; /* <%= platform.px(data.shadow[size].blur) %> */
  --shadow-<%= size -%>-spread: <%= platform.unit(data.shadow[size].spread) -%>; /* <%= platform.px(data.shadow[size].spread) %> */
  <% }) -%>

  <% spacingSizes.forEach(size => { -%>
  --spacing-<%= size -%>: <%= platform.unit(platform.spacing(data.spacing[size])) -%>; /* <%= platform.px(platform.spacing(data.spacing[size])) %> */
  <% }) -%>
  --spacing-unit: <%= data.spacing.unit -%>;

  <% textSizes.forEach(size => { -%>
  --text-<%= size -%>-line-height: <%= platform.number(data.text[size].lineHeight) -%>;
  --text-<%= size -%>-size: <%= platform.unit(data.text[size].size) -%>; /* <%= platform.px(data.text[size].size) %> */
  <% }) -%>

  --typography-font-heading: '<%- data.typography.font.heading -%>';
  --typography-font-monospace: '<%- data.typography.font.monospace -%>';
  --typography-font-text: '<%- data.typography.font.text -%>';
  --typography-font-system: '<%- data.typography.font.system -%>';
  --typography-root-line-height: <%= platform.number(data.text.df.lineHeight) -%>;
  --typography-root-text-size: <%= platform.px(data.text.df.size) -%>;
}
