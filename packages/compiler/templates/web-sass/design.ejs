<% borderSizes.forEach(size => { -%>
$border-<%= size -%>-radius: <%= platform.unit(data.border[size].radius) -%> !default // <%= platform.px(data.border[size].radius) %>
$border-<%= size -%>-width: <%= platform.unit(data.border[size].width) -%> !default // <%= platform.px(data.border[size].width) %>
<% }) -%>

<% breakpointSizes.forEach(size => { -%>
$breakpoint-<%= size -%>-query: '<%= platform.query(data.breakpoint[size].queryConditions) -%>' !default
$breakpoint-<%= size -%>-query-size: <%= data.breakpoint[size].querySize -%> !default
$breakpoint-<%= size -%>-root-line-height: <%= platform.number(data.breakpoint[size].rootLineHeight) -%> !default
$breakpoint-<%= size -%>-root-text-size: <%= platform.px(data.breakpoint[size].rootTextSize) -%> !default
<% }) -%>

<% elevationDepths.forEach(([depth, zIndex]) => { -%>
$depth-<%= depth -%>: <%= zIndex -%> !default
<% }) -%>

<% headingSizes.forEach(size => { -%>
$heading-<%= size -%>-letter-spacing: <%= platform.px(data.heading[size].letterSpacing) -%> !default
$heading-<%= size -%>-line-height: <%= platform.number(data.heading[size].lineHeight) -%> !default
$heading-<%= size -%>-size: <%= platform.unit(data.heading[size].size) -%> !default // <%= platform.px(data.heading[size].size) %>
<% }) -%>

<% shadowSizes.forEach(size => { -%>
$shadow-<%= size -%>-x: <%= platform.unit(data.shadow[size].x) -%> !default // <%= platform.px(data.shadow[size].x) %>
$shadow-<%= size -%>-y: <%= platform.unit(data.shadow[size].y) -%> !default // <%= platform.px(data.shadow[size].y) %>
$shadow-<%= size -%>-blur: <%= platform.unit(data.shadow[size].blur) -%> !default // <%= platform.px(data.shadow[size].blur) %>
$shadow-<%= size -%>-spread: <%= platform.unit(data.shadow[size].spread) -%> !default // <%= platform.px(data.shadow[size].spread) %>
<% }) -%>

<% spacingSizes.forEach(size => { -%>
$spacing-<%= size -%>: <%= platform.unit(platform.spacing(data.spacing[size])) -%> !default // <%= platform.px(platform.spacing(data.spacing[size])) %>
<% }) -%>
$spacing-unit: <%= data.spacing.unit -%> !default

<% textSizes.forEach(size => { -%>
$text-<%= size -%>-line-height: <%= platform.number(data.text[size].lineHeight) -%> !default
$text-<%= size -%>-size: <%= platform.unit(data.text[size].size) -%> !default // <%= platform.px(data.text[size].size) %>
<% }) -%>

$typography-font-heading: '<%- data.typography.font.heading -%>' !default
$typography-font-monospace: '<%- data.typography.font.monospace || platform.font('monospace') %>' !default
$typography-font-text: '<%- data.typography.font.text -%>' !default
$typography-font-system: '<%- data.typography.font.system || platform.font('system') %>' !default
$typography-root-line-height: <%= platform.number(data.text.df.lineHeight) -%> !default
$typography-root-text-size: <%= platform.px(data.text.df.size) -%> !default
