{
  "name": "aesthetic-framework",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "aesthetic": "node ./packages/cli/lib/bin.js",
    "prepare": "beemo create-config --silent",
    "build": "packemon build --addEngines",
    "pack": "NODE_ENV=production packemon pack --addEngines --declaration=standard",
    "clean": "packemon clean",
    "check": "yarn run type && yarn run test && yarn run lint",
    "format": "beemo prettier",
    "generate:ds": "yarn run aesthetic compile aesthetic ./packages/design-systems/src/aesthetic --format web-tsx",
    "generate:prefix": "ts-node --files --project ./tsconfig.scripts.json ./scripts/generatePrefixData.ts",
    "lint": "beemo eslint",
    "test": "beemo jest",
    "coverage": "yarn run test --coverage",
    "type": "beemo typescript --build --reference-workspaces",
    "release": "lerna publish",
    "prerelease": "yarn run pack && yarn test"
  },
  "engines": {
    "node": ">=12.17.0"
  },
  "devDependencies": {
    "@beemo/dev": "^0.2.2",
    "@types/ejs": "^3.0.6",
    "@types/fs-extra": "^9.0.11",
    "@types/lodash": "^4.14.170",
    "@types/prettier": "^2.2.3",
    "@types/react": "^16.9.56",
    "@types/string-hash": "^1.1.1",
    "benchmark": "^2.1.4",
    "builtin-modules": "^3.2.0",
    "caniuse-api": "^3.0.0",
    "conventional-changelog-beemo": "^2.1.0",
    "lerna": "^4.0.0",
    "packemon": "^1.0.0-alpha.0",
    "ts-node": "^9.1.1"
  },
  "workspaces": [
    "packages/*"
  ]
}
