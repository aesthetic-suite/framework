{
  "private": true,
  "name": "aesthetic",
  "version": "1.0.1",
  "description": "Aesthetic is a powerful React library for styling components through the use of adapters.",
  "keywords": [
    "aesthetic",
    "react",
    "react-native",
    "native",
    "style",
    "components",
    "hoc",
    "css",
    "css-in-js",
    "css-modules",
    "aphrodite",
    "glamor",
    "fela",
    "jss"
  ],
  "scripts": {
    "outdated": "yarn outdated; for dir in `find ./packages/ -type d -maxdepth 1`; do (cd \"$dir\" && npm outdated); done; lerna updated",
    "bootstrap": "lerna bootstrap",
    "clean": "rimraf ./packages/{aesthetic,aesthetic-*}/lib/ && lerna clean --yes",
    "build": "yarn run bootstrap && node ./scripts/build-packages.js && node ./scripts/verify-packages.js && yarn run docs",
    "docs": "cp ./README.md ./packages/aesthetic/",
    "flow": "flow check",
    "lint": "eslint ./packages ./tests",
    "jest": "NODE_ENV=development jest --config ./jest.json",
    "coverage": "yarn run jest -- --coverage",
    "prepare": "yarn run clean && yarn run build && yarn test",
    "pretest": "yarn run lint",
    "test": "yarn run jest",
    "test:bundle": "browserify -t [ babelify ] -t [ envify --NODE_ENV production ] ./tests/bundle.js -o ./tests/bundle.min.js",
    "posttest": "yarn run flow",
    "preversion": "yarn run prepare",
    "publish": "yarn run prepare && lerna publish --include-filtered-dependencies",
    "publish:explicit": "npm run publish -- --only-explicit-updates",
    "publish:force": "npm run publish -- --force-publish=*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/aesthetic.git"
  },
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/aesthetic/issues"
  },
  "homepage": "https://github.com/milesj/aesthetic#readme",
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^19.0.0",
    "babel-plugin-css-modules-transform": "^1.2.3",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-flow-comments": "^6.22.0",
    "babel-preset-latest": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.24.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "envify": "^4.0.0",
    "enzyme": "^2.7.0",
    "eslint": "^3.18.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-flowtype": "^2.30.3",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "flow-bin": "^0.42.0",
    "fs-promise": "^2.0.0",
    "glob": "^7.1.1",
    "jest": "^19.0.2",
    "lerna": "2.0.0-beta.38",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-native": "^0.42.2",
    "rimraf": "^2.6.1"
  }
}
