{
  "private": true,
  "name": "aesthetic",
  "version": "0.1.0",
  "description": "Abstract library to support a range of styling options for React components.",
  "keywords": [],
  "scripts": {
    "outdated": "npm outdated; for dir in `find ./packages/ -type d -maxdepth 1`; do (cd \"$dir\" && npm outdated); done; lerna updated",
    "prune": "npm prune; for dir in `find ./packages/ -type d -maxdepth 1`; do (cd \"$dir\" && npm prune); done;",
    "clean": "rimraf ./packages/{aesthetic,aesthetic-*}/lib && lerna clean --yes",
    "build": "lerna run build && lerna bootstrap",
    "docs": "cp ./README.md ./packages/aesthetic/README.md",
    "flow": "flow check",
    "lint": "eslint './packages/{aesthetic,aesthetic-*}/{src,tests}/*.js'",
    "mocha": "NODE_ENV=development mocha --opts ./mocha.opts './packages/{aesthetic,aesthetic-*}/tests/*.test.js'",
    "pretest": "npm run clean && npm run build",
    "test": "npm run mocha",
    "test:bundle": "browserify -t [ babelify ] -t [ envify --NODE_ENV production ] ./tests/bundle.js -o ./tests/bundle.min.js",
    "posttest": "npm run lint && npm run flow",
    "preversion": "npm test",
    "release": "npm run docs && npm run clean && npm run build && lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/aesthetic.git"
  },
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/aesthetic/issues"
  },
  "homepage": "https://github.com/milesj/aesthetic#readme",
  "devDependencies": {
    "aphrodite": "^1.1.0",
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-css-modules-transform": "^1.1.0",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-flow-comments": "^6.17.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.18.0",
    "babel-register": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.3.0",
    "chai": "^3.5.0",
    "envify": "^4.0.0",
    "enzyme": "^2.7.0",
    "eslint": "^3.10.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-flowtype": "^2.29.2",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.7.1",
    "flow-bin": "^0.37.4",
    "jsdom": "^9.9.1",
    "lerna": "2.0.0-beta.32",
    "mocha": "^3.1.2",
    "react": "^15.4.0",
    "react-addons-test-utils": "^15.4.0",
    "react-dom": "^15.4.0",
    "rimraf": "^2.5.4"
  }
}
