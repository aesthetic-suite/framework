{
  "name": "aesthetic-root",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "aesthetic": "aesthetic",
    "prepare": "beemo create-config --silent",
    "build": "beemo create-config babel --esm --silent && rollup --config && yarn run type",
    "clean": "rm -rf ./packages/*/{lib,esm,*.tsbuildinfo}",
    "coverage": "yarn run jest --coverage",
    "lint": "beemo eslint",
    "jest": "beemo jest",
    "prettier": "beemo prettier",
    "release": "lerna publish",
    "type": "beemo typescript --build --reference-workspaces",
    "prerelease": "yarn run clean && yarn run build && yarn test",
    "pretest": "yarn run type",
    "test": "yarn run coverage",
    "posttest": "yarn run lint"
  },
  "engines": {
    "node": ">=10.10.0"
  },
  "devDependencies": {
    "@milesj/build-tools": "^2.5.0",
    "@types/ejs": "^3.0.2",
    "@types/fs-extra": "^8.1.0",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/inline-style-prefixer": "^5.0.0",
    "@types/lodash": "^4.14.150",
    "@types/prettier": "^2.0.0",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/string-hash": "^1.1.1",
    "conventional-changelog-beemo": "^1.6.0",
    "eslint-plugin-rut": "^1.0.1",
    "jest-rut": "^1.0.1",
    "lerna": "^3.20.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rollup": "^2.7.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-node-externals": "^2.1.5",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rut-dom": "^1.0.1"
  },
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      {
        "driver": "typescript",
        "declarationOnly": true
      }
    ],
    "settings": {
      "decorators": true,
      "react": true
    },
    "eslint": {
      "extends": [
        "plugin:rut/recommended"
      ],
      "rules": {
        "prefer-object-spread": "off",
        "import/export": "off",
        "node/no-missing-import": "off"
      }
    },
    "jest": {
      "setupFilesAfterEnv": [
        "jest-rut"
      ],
      "testEnvironment": "jsdom"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "browserslist": [
    "ie 11"
  ]
}
