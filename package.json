{
  "name": "aesthetic-root",
  "private": true,
  "scripts": {
    "prepare": "beemo create-config --silent",
    "build": "beemo run-script build --workspaces=*",
    "clean": "rm -rf ./packages/*/{lib,esm,*.tsbuildinfo}",
    "coverage": "yarn run jest --coverage",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "prettier": "beemo prettier",
    "release": "lerna publish",
    "type": "beemo typescript --build --reference-workspaces",
    "prerelease": "yarn run clean && yarn test && yarn run build",
    "pretest": "yarn run type",
    "test": "yarn run coverage",
    "test:bundle": "yarn run build && beemo create-config typescript && webpack",
    "posttest": "yarn run eslint"
  },
  "devDependencies": {
    "@milesj/build-tools": "^0.61.2",
    "@types/extend": "^3.0.1",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "@types/uuid": "^3.4.6",
    "babel-loader": "^8.0.6",
    "babel-plugin-css-modules-transform": "1.6.2",
    "babel-register": "^6.26.0",
    "chalk": "^3.0.0",
    "conventional-changelog-beemo": "^1.6.0",
    "eslint-plugin-rut": "^0.1.9",
    "glob": "^7.1.6",
    "jest-rut": "^0.8.1",
    "lerna": "^3.19.0",
    "react-dom": "^16.12.0",
    "rut-dom": "^0.1.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "react": true
    },
    "babel": {
      "plugins": [
        "babel-plugin-css-modules-transform"
      ]
    },
    "eslint": {
      "extends": [
        "plugin:rut/recommended"
      ],
      "rules": {
        "import/export": "off"
      }
    },
    "jest": {
      "setupFilesAfterEnv": [
        "jest-rut"
      ]
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "browserslist": [
    "ie 11"
  ]
}
