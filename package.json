{
  "name": "aesthetic-root",
  "private": true,
  "scripts": {
    "build": "beemo run-script build --workspaces=*",
    "clean": "rm -rf ./packages/*/{lib,esm}",
    "coverage": "yarn run jest --coverage",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "prettier": "beemo prettier",
    "release": "lerna publish",
    "type": "beemo typescript --build --reference-workspaces",
    "prerelease": "yarn test && yarn run build",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "test:bundle": "yarn run build && beemo create-config typescript && webpack",
    "posttest": "yarn run eslint"
  },
  "devDependencies": {
    "@milesj/build-tools": "^0.54.0",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-css-modules-transform": "1.6.2",
    "babel-register": "^6.26.0",
    "chalk": "^2.4.2",
    "glob": "^7.1.4",
    "jest-rut": "^0.3.0",
    "lerna": "^3.16.4",
    "react-dom": "^16.9.0",
    "rut": "^0.3.1",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.7"
  },
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "react": true
    },
    "babel": {
      "plugins": [
        "babel-plugin-css-modules-transform"
      ]
    },
    "eslint": {
      "rules": {
        "import/export": "off"
      }
    },
    "jest": {
      "setupFilesAfterEnv": [
        "jest-rut"
      ]
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "browserslist": [
    "ie 11"
  ]
}
