{
  "name": "aesthetic-root",
  "private": true,
  "scripts": {
    "build": "beemo typescript --workspaces=aesthetic",
    "coverage": "yarn run jest --coverage",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "prettier": "beemo prettier",
    "release": "lerna publish",
    "type": "beemo typescript --workspaces=* --noEmit",
    "prerelease": "yarn test && yarn run build",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "posttest": "yarn run eslint"
  },
  "devDependencies": {
    "@milesj/build-tools": "^0.4.2",
    "babel-loader": "^8.0.4",
    "babel-plugin-css-modules-transform": "1.6.1",
    "babel-register": "^6.26.0",
    "chalk": "^2.4.1",
    "cheerio": "^1.0.0-rc.2",
    "fs-promise": "^2.0.3",
    "glob": "^7.1.3",
    "lerna": "^3.4.3"
  },
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "react": true
    },
    "babel": {
      "plugins": [
        "css-modules-transform"
      ]
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "browserslist": [
    "ie 10"
  ]
}
