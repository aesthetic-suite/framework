{
  "name": "aesthetic-framework",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "aesthetic": "aesthetic",
    "prepare": "beemo create-config --silent",
    "build": "packemon build --checkLicenses --addEngines && yarn run type",
    "clean": "packemon clean && rm -rf packages/*/*.tsbuildinfo",
    "coverage": "yarn run jest --coverage",
    "format": "beemo prettier",
    "generate:prefix": "ts-node --files --project ./tsconfig.scripts.json ./scripts/generatePrefixData.ts",
    "lint": "beemo eslint",
    "jest": "beemo jest",
    "prettier": "beemo prettier",
    "release": "lerna publish",
    "type": "beemo typescript --build --reference-workspaces",
    "prerelease": "yarn run clean && yarn run build && yarn test",
    "pretest": "yarn run type",
    "test": "yarn run coverage",
    "posttest": "yarn run lint"
  },
  "engines": {
    "node": ">=10.10.0"
  },
  "devDependencies": {
    "@milesj/build-tools": "^2.14.1",
    "@types/ejs": "^3.0.5",
    "@types/fs-extra": "^9.0.5",
    "@types/lodash": "^4.14.165",
    "@types/prettier": "^2.1.5",
    "@types/react": "^16.9.56",
    "@types/string-hash": "^1.1.1",
    "benchmark": "^2.1.4",
    "builtin-modules": "^3.1.0",
    "caniuse-api": "^3.0.0",
    "conventional-changelog-beemo": "^2.0.0",
    "lerna": "^3.22.1",
    "packemon": "^0.3.5",
    "ts-node": "^9.1.1"
  },
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      {
        "driver": "babel",
        "strategy": "none"
      },
      "eslint",
      "jest",
      "prettier",
      {
        "driver": "typescript",
        "buildFolder": "dts",
        "declarationOnly": true
      }
    ],
    "settings": {
      "decorators": true,
      "react": true
    },
    "jest": {
      "testEnvironment": "jsdom"
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
