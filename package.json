{
  "private": true,
  "name": "aesthetic",
  "version": "0.1.0",
  "description": "Abstract library to support a range of styling options for React components.",
  "keywords": [],
  "scripts": {
    "lerna": "lerna",
    "outdated": "yarn outdated; for dir in `find ./packages/ -type d -maxdepth 1`; do (cd \"$dir\" && npm outdated); done; lerna updated",
    "clean": "rimraf ./packages/{aesthetic,aesthetic-*}/lib && lerna clean --yes",
    "build": "node ./scripts/build-packages.js",
    "docs": "cp ./README.md ./packages/aesthetic/README.md",
    "flow": "flow check",
    "lint": "eslint ./src ./tests",
    "mocha": "NODE_ENV=development mocha --opts ./mocha.opts './tests/**/*.test.js'",
    "pretest": "yarn run lint",
    "test": "yarn run mocha",
    "test:bundle": "browserify -t [ babelify ] -t [ envify --NODE_ENV production ] ./tests/bundle.js -o ./tests/bundle.min.js",
    "posttest": "yarn run flow",
    "preversion": "yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/aesthetic.git"
  },
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/aesthetic/issues"
  },
  "homepage": "https://github.com/milesj/aesthetic#readme",
  "devDependencies": {
    "aphrodite": "^1.1.0",
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-css-modules-transform": "^1.1.0",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-flow-comments": "^6.17.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.18.0",
    "babel-register": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.3.0",
    "chai": "^3.5.0",
    "envify": "^4.0.0",
    "enzyme": "^2.7.0",
    "eslint": "^3.13.0",
    "eslint-config-airbnb": "14.0.0",
    "eslint-plugin-flowtype": "^2.29.2",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "3.0.2",
    "eslint-plugin-react": "^6.7.1",
    "fela": "^4.1.1",
    "fela-dom": "^4.1.1",
    "fela-preset-web": "^4.1.1",
    "flow-bin": "^0.37.4",
    "fs-promise": "^1.0.0",
    "glamor": "^2.20.20",
    "glob": "^7.1.1",
    "hoist-non-react-statics": "^1.2.0",
    "jsdom": "^9.9.1",
    "jss": "^6.1.1",
    "jss-preset-default": "^1.2.1",
    "lerna": "2.0.0-beta.32",
    "lodash.merge": "^4.6.0",
    "mocha": "^3.1.2",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "rimraf": "^2.5.4"
  }
}
