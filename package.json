{
  "private": true,
  "name": "aesthetic",
  "version": "0.5.2",
  "description": "Aesthetic is a powerful React library for styling components through the use of adapters.",
  "keywords": [
    "aesthetic",
    "react",
    "react-native",
    "native",
    "style",
    "components",
    "hoc",
    "css",
    "css-in-js",
    "css-modules",
    "aphrodite",
    "glamor",
    "fela",
    "jss"
  ],
  "scripts": {
    "outdated": "yarn outdated; for dir in `find ./packages/ -type d -maxdepth 1`; do (cd \"$dir\" && npm outdated); done; lerna updated",
    "bootstrap": "lerna bootstrap",
    "clean": "rimraf ./packages/{aesthetic,aesthetic-*}/*.js && lerna clean --yes",
    "build": "yarn run bootstrap && node ./scripts/build-packages.js && node ./scripts/verify-packages.js && yarn run docs",
    "docs": "cp ./README.md ./packages/aesthetic/README.md",
    "flow": "flow check",
    "lint": "eslint ./src ./tests",
    "jest": "NODE_ENV=development jest --config ./jest.json",
    "coverage": "yarn run jest -- --coverage",
    "pretest": "yarn run lint",
    "test": "yarn run jest",
    "test:bundle": "browserify -t [ babelify ] -t [ envify --NODE_ENV production ] ./tests/bundle.js -o ./tests/bundle.min.js",
    "posttest": "yarn run flow",
    "preversion": "yarn test && yarn run clean && yarn run build",
    "publish": "lerna publish",
    "publish:force": "lerna publish --force-publish=*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/aesthetic.git"
  },
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/aesthetic/issues"
  },
  "homepage": "https://github.com/milesj/aesthetic#readme",
  "devDependencies": {
    "aphrodite": "^1.1.0",
    "babel-cli": "^6.23.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^19.0.0",
    "babel-plugin-css-modules-transform": "^1.2.1",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-flow-comments": "^6.22.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.23.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "envify": "^4.0.0",
    "enzyme": "^2.7.0",
    "eslint": "3.15.0",
    "eslint-config-airbnb": "14.1.0",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "fela": "^4.2.5",
    "fela-dom": "^4.2.5",
    "fela-native": "^4.2.5",
    "fela-preset-web": "^4.2.5",
    "flow-bin": "^0.39.0",
    "fs-promise": "^2.0.0",
    "glamor": "^2.20.23",
    "glob": "^7.1.1",
    "hoist-non-react-statics": "^1.2.0",
    "jest": "^19.0.1",
    "jss": "^6.3.0",
    "jss-preset-default": "^1.3.1",
    "lerna": "2.0.0-beta.37",
    "lodash.merge": "^4.6.0",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-native": "^0.41.2",
    "rimraf": "^2.6.0"
  }
}
