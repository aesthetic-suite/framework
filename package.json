{
  "name": "aesthetic-framework",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "aesthetic": "aesthetic",
    "prepare": "beemo create-config --silent",
    "build": "beemo create-config babel --esm --silent && rollup --config",
    "clean": "rm -rf ./packages/*/{lib,esm,*.tsbuildinfo}",
    "coverage": "yarn run jest --coverage",
    "format": "beemo prettier",
    "generate:prefix": "ts-node --files --project ./tsconfig.scripts.json ./scripts/generatePrefixData.ts",
    "lint": "beemo eslint",
    "jest": "beemo jest",
    "prettier": "beemo prettier",
    "release": "lerna publish",
    "type": "beemo typescript --build --reference-workspaces",
    "prerelease": "yarn run clean && yarn run build && yarn test",
    "pretest": "yarn run type",
    "test": "yarn run coverage",
    "posttest": "yarn run lint"
  },
  "engines": {
    "node": ">=10.10.0"
  },
  "devDependencies": {
    "@milesj/build-tools": "^2.12.0",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/ejs": "^3.0.4",
    "@types/fs-extra": "^9.0.1",
    "@types/lodash": "^4.14.161",
    "@types/prettier": "^2.1.1",
    "@types/react": "^16.9.49",
    "@types/string-hash": "^1.1.1",
    "benchmark": "^2.1.4",
    "builtin-modules": "^3.1.0",
    "caniuse-api": "^3.0.0",
    "conventional-changelog-beemo": "^2.0.0",
    "lerna": "^3.22.1",
    "rollup": "^2.28.2",
    "rollup-plugin-node-externals": "^2.2.0",
    "ts-node": "^9.0.0"
  },
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      {
        "driver": "typescript",
        "declarationOnly": true
      }
    ],
    "settings": {
      "decorators": true,
      "react": true
    },
    "eslint": {
      "ignore": [
        "scripts/"
      ]
    },
    "jest": {
      "testEnvironment": "jsdom"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "browserslist": [
    "ie 11"
  ]
}
